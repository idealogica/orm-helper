{
    "name": "idealogica/orm-helper",
    "description": "Collection of classes to simplify Doctrine ORM everyday usage",
    "keywords": ["orm", "doctrine", "php7", "php", "helper"],
    "type": "library",
    "homepage": "https://github.com/idealogica/orm-helper",
    "license": "MIT",
    "authors":
    [
        {
            "name": "Konstatin Nikiforov",
            "email": "konstantin@idealogica.me",
            "homepage": "http://konstantin.idealogica.me"
        }
    ],
    "require":
    {
        "php": ">=7.2.0",
        "respect/validation": "~1.1.31",
        "idealogica/log-x": "~1.1.0",
        "ext-json": "*",
        "psr/simple-cache": "~1.0.0",
        "doctrine/orm": "~2.7.4"
    },
    "require-dev":
    {
        "idealogica/debug": "~1.1.3",
        "phpunit/phpunit": "~9.4.3"
    },
    "autoload":
    {
        "psr-4":
        {
            "Idealogica\\OrmHelper\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev":
    {
        "classmap":
        [
            "tests/classes/RepositoryFactory.php",
            "tests/classes/TestEntity.php",
            "tests/classes/TestEntityRepository.php"
        ]
    }
}
